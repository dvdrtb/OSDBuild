##OSD Cloud ZTI Win11 22H2 German

Write-Host  -ForegroundColor Cyan "Starting OSD Cloud Zero Touch Deployment.."
Start-Sleep -Seconds 3

#Change Display Resolution for Virtual Machine
if ((Get-MyComputerModel) -match 'Virtual') {
    Write-Host  -ForegroundColor Cyan "Setting Display Resolution to 1600x"
    Set-DisRes 1600
}

#Make sure I have the latest OSD Content
Write-Host  -ForegroundColor Cyan "Installing PowerShell Module.."
Install-Module -Name OSD -Force

#Start OSD Cloud ZTI Deployment
Write-Host  -ForegroundColor Cyan "Start OSDCloud Deployment Windows 10 22H2"
Start-OSDCloud -OSLanguage de-de -OSBuild 22H2 -OSEdition Enterprise -ZTI

#PostAction
Write-Host  -ForegroundColor Cyan "Restarting in 20 seconds!"
Start-Sleep -Seconds 20
wpeutil reboot
